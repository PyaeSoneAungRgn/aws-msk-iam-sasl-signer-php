{
    "name": "pyaesoneaung/aws-msk-iam-sasl-signer-php",
    "description": "AWS MSK IAM SASL Signer for PHP",
    "keywords": [
        "pyaesoneaung",
        "aws-msk-iam-sasl-signer-php"
    ],
    "homepage": "https://github.com/PyaeSoneAungRgn/aws-msk-iam-sasl-signer-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Pyae Sone Aung",
            "email": "pyaesoneaungrgn@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "aws/aws-sdk-php": "^3.296"
    },
    "require-dev": {
        "pestphp/pest": "^3.2",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "PyaeSoneAung\\AwsMskIamSaslSigner\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PyaeSoneAung\\AwsMskIamSaslSigner\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}